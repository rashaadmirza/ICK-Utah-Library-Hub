<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Focused State -->
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/aged_mahogany"/>
            <corners android:radius="12dp"/>
            <stroke android:width="2dp" android:color="@color/molten_chestnut"/> <!-- Highlight border -->
        </shape>
    </item>

    <!-- Default State -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/aged_mahogany"/>
            <corners android:radius="12dp"/>
            <stroke android:width="2dp" android:color="@color/molten_chestnut_s40"/> <!-- Normal state -->
        </shape>
    </item>

</selector>
