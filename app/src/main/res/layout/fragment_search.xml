<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/obsidian_shadow"
    android:orientation="vertical"
    android:padding="16dp"
    android:scrollbars="vertical"
    tools:context=".ui.SearchFragment">

    <!-- Search Input -->
    <EditText
        android:id="@+id/search_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:autofillHints=""
        android:background="@android:drawable/editbox_background"
        android:drawableStart="@drawable/search_24px"
        android:drawableTint="#9E9E9E"
        android:hint="@string/search_hint"
        android:textColorHint="#9E9E9E"
        android:textSize="16sp"
        android:inputType="text"
        android:minHeight="48dp"
        android:padding="8dp"
        tools:ignore="VisualLintTextFieldSize" />

    <!-- Filter Group -->
    <LinearLayout
        android:id="@+id/chk_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_margin="4dp">

        <CheckBox
            android:id="@+id/filter_books"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="@color/molten_chestnut_t10"
            android:text="@string/books"
            android:textColor="@color/grey"
            android:checked="true"
            android:layout_marginEnd="8dp" />

        <CheckBox
            android:id="@+id/filter_readers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:buttonTint="@color/molten_chestnut_t10"
            android:checked="true"
            android:text="@string/readers"
            android:textColor="@color/grey" />

        <CheckBox
            android:id="@+id/filter_book_issues"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="@color/molten_chestnut_t10"
            android:text="@string/book_issues"
            android:textColor="@color/grey"
            android:checked="true"
            android:layout_marginEnd="8dp" />
    </LinearLayout>

    <!-- Search Results List -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/search_results"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>
